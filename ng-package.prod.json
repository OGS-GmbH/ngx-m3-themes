{
	"$schema": "./node_modules/ng-packagr/ng-package.schema.json",
	"dest": "./dist/main",
	"lib": {
		"entryFile": "./src/public-api.ts"
	},
	"assets": [
		{
			"glob": "**/*.scss",
			"followSymlinks": false,
			"input": "./src",
			"output": "./"
		},
		{
			"glob": "**/*.(ttf|woff2)",
			"followSymlinks": false,
			"input": "./src",
			"output": "./"
		}
	]
}
